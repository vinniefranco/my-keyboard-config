&trackball_peripheral_split {
    device = <&trackball_peripheral>;

    /* Layer 1: scroll mode */
    scrolling {
        layers = <1>;
        input-processors
            = <&zip_xy_to_scroll_mapper>
            , <&zip_scroll_scaler 1 4>
            , <&zip_ble_report_rate_limit>;
    };

    /* Layers where you WANT mouse â€” list them explicitly */
    mouse_mode {
        layers = <0 2 3 4 5 6>;
        input-processors = <&zip_ble_report_rate_limit>;
    };
};
